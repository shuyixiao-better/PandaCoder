<idea-plugin>
    <id>com.shuyixiao.yixiaoPlugins</id>

    <name>YixiaoPlugins</name>
    <vendor email="yixiaoshu88@163.com" url="https://www.shuyixiao.cloud">舒一笑</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.shuyixiao.setting.PluginSettings"/>
        <applicationConfigurable groupId="tools" displayName="PandaCoder" id="FileAnnotationInformationConfiguration"
                                instance="com.shuyixiao.setting.SettingConfigurable"/>
    </extensions>
    <actions>
        <action id="ReportMessage" class="com.shuyixiao.ReportMessage" text="一笑插件欢迎使用"
                description="输出一条信息">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <action id="ConvertToCamelCase" class="com.shuyixiao.ConvertToCamelCaseAction" text="中文转小驼峰">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C"/>
        </action>

        <!-- 保留原有的中文类转译功能 -->
        <action id="KotlinClassNameTranslator" class="com.shuyixiao.JavaClassNameTranslatorAction" text="中文类转译" description="中文类生成工具">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>

        <!-- 添加直接在原生对话框中支持中文输入的功能 -->
        <action id="ChineseFileCreation" class="com.shuyixiao.ChineseClassCreationAction" text="智能中文类" description="支持在原生对话框中输入中文自动转换为英文类名">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>